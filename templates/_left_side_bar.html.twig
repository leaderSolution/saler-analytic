<div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start">
		{% for item in menu %}
            <li>
                <a href="{{ item.path }}" class="{{ route ==  item.route  ? 'current' }} nav-link px-0 align-middle">
                    <i class="{{ item.icon }}"></i>
                    <span class="ms-1 d-none d-sm-inline">{{ item.text }}</span>
                </a>
            </li>
        {% endfor %}
	</ul>
	<hr>
	<div class="dropdown pb-4">
		<a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
			<img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
			<span class="d-none d-sm-inline mx-1">{{ app.user.username }}</span>
		</a>
		<ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
			<li>
				<a class="dropdown-item" href="#">New project...</a>
			</li>
			<li>
				<a class="dropdown-item" href="#">Settings</a>
			</li>
			<li>
				<a class="dropdown-item" href="{{ path('profile') }}">Profile</a>
			</li>
			<li>
				<hr class="dropdown-divider">
			</li>
			<li>
				<a class="dropdown-item" href="{{ path('app_logout') }}">Sign out</a>
			</li>
		</ul>
	</div>
</div>
